<div class="container">
  <div class="row"></div>
  <div class="row"></div>
  <div class="row">
    <div class="col s12 m12 l4 center">
      <div class="card-panel">
        <div class="row s12">
          <a class="btn red darken-1" href="/auth/google_oauth2"><i class="fa fa-google-plus"></i>&nbsp; &nbsp;<%= t ".login_google" %>
          </a>
        </div>
        <div class="row s12">
          <a class="btn blue darken-4" href="/auth/facebook"><i class="fa fa-facebook"></i>&nbsp; &nbsp; <%= t ".login_facebook" %>
          </a>
        </div>

        <div class="row s12">
          <a class="btn cyan darken-1" href="/auth/twitter"><i class="fa fa-twitter"></i>&nbsp; &nbsp; <%= t ".login_twiiter" %> &nbsp; &nbsp;</a>
        </div>
      </div>
    </div>
    <div class="col s12 m12 l8">
      <div class="card">
        <div class="title-sign-up-page center">
          <%= t ".loggin" %>
        </div>
        <div class="card-content">
          <%= form_for(:session, url: login_path, class: "new_user") do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons md-36 prefix icon-account-material">email</i>&nbsp;
                <%= f.email_field :email, class: "validate", placeholder: (t ".email") %>
                <span id="message-for-email" style="display: none;"></span>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons md-36 prefix icon-account-material">lock_outline</i>&nbsp;
                <%= f.password_field :password, class: "validate", placeholder: (t ".password") %>
              </div>
            </div>

            <div class="row center">
              <div class="input-field col s12">
                <%= f.submit t(".loggin"), class: "btn waves-effect waves-light" %>
              </div>
            </div>
            <div class="row center">
              <div class="input-field col s12">
                Or <a href="#">Forgot Password</a>
              </div>
            </div>
            <div class="row center">
              <div class="input-field col s12">
                <%= t ".new_user" %> <%= link_to t(".signup"), "/signup" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
